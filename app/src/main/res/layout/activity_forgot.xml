<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgot"
    android:background="@drawable/background">


    <TextView
        android:id="@+id/txtt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:layout_marginTop="35dp"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="549dp"
        android:text="Forgot password?"
        android:textColor="@color/used"
        android:textSize="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.agrawalsuneet.dotsloader.loaders.LazyLoader
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="30dp"
            app:lazyloader_animDur="900"
            app:lazyloader_dotsDist="10dp"
            app:lazyloader_dotsRadius="16dp"
            app:lazyloader_firstDelayDur="150"
            app:lazyloader_firstDotColor="#F23CFAE6"
            app:lazyloader_interpolator="@android:anim/decelerate_interpolator"
            app:lazyloader_secondDelayDur="300"
            app:lazyloader_secondDotColor="#F23CFAE6"
            app:lazyloader_thirdDotColor="#F23CFAE6"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:id="@+id/progg"/>




        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:hint="Enter your email here.."
            android:background="@drawable/btn"
            android:inputType="textEmailAddress"
            android:id="@+id/txt_email"/>

        <Button
            android:layout_marginTop="40dp"
            android:layout_below="@+id/txt_email"
            android:id="@+id/send"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Send"
            android:background="@drawable/btn_splash"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="22sp"
            android:layout_centerInParent="true"/>


    </RelativeLayout>

</RelativeLayout>